@inherits LayoutComponentBase
@using MudBlazor
@using Flink.Components.Layout
@inject NavigationManager Navigation

<MudThemeProvider IsDarkMode="true" Theme="CustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="mud-layout-root">
    <MudMainContent Class="pt-0 mt-0">
        @Body
    </MudMainContent>
    <BottomMenu />
</MudLayout>

@code {
    MudTheme CustomTheme = new MudTheme()
        {
            PaletteDark = new PaletteDark()
            {
                TextPrimary = "#F9F4F5",
                Background = "#03122F",
                Primary = "#F1916D",
                Secondary = "#182C53",
                Tertiary = "#DA9ADA",
                Error = "#C04444",
                Success = "#329C36",
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Montserrat", "sans-serif" }
                },
                Body1 = new Body1()
                {
                    FontWeight = 700
                },
                Subtitle1 = new Subtitle1()
                {
                    FontFamily = new[] { "Widescreen", "sans-serif" },
                    FontWeight = 900,
                    FontSize = "1.25rem",
                    LineHeight = 1.30
                },
                H1 = new H1()
                {
                    FontFamily = new[] { "Widescreen", "sans-serif" },
                    FontWeight = 900,
                    FontSize = "3rem",
                    LineHeight = 1.30
                },
                H2 = new H2()
                {
                    FontFamily = new[] { "Widescreen", "sans-serif" },
                    FontWeight = 900,
                    FontSize = "1.55rem",
                    LineHeight = 1.30
                },
                H3 = new H3()
                {
                    FontFamily = new[] { "Widescreen", "sans-serif" },
                    FontWeight = 900,
                    FontSize = "1.9rem",
                    LineHeight = 1.30
                }
            }
        };
}

<style>
    .mud-layout-root {
        display: flex;
        flex-direction: column;
        min-height: 92vh;
        margin: 0;
        padding: 0;
    }
</style>