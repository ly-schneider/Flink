@using MudBlazor

@page "/help"

<MudContainer Class="container">
    <MudStack Spacing="2" Class="p-4">
        <MudText Typo="Typo.h3" Class="mb-2">Hilfe</MudText>

        <NavLink href="/infos">
            <MudPaper Class="list-item" Elevation="1">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.body1">Infos</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Color="Color.Default" />
                </MudStack>
            </MudPaper>
        </NavLink>

        <NavLink href="/faq">
            <MudPaper Class="list-item" Elevation="1">
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.body1">FAQ</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Color="Color.Default" />
                </MudStack>
            </MudPaper>
        </NavLink>
    </MudStack>
</MudContainer>

<style>
    .container {
        height: 100%;
        padding: 0;
        margin: 0 auto;
        width: 100%;
    }

    .list-item {
        width: 100%;
        padding: 12px 16px;
        margin-bottom: 8px;
        background-color: #182C53;
        border-radius: 8px;
    }
</style>